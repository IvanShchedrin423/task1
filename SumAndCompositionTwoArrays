using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SumAndCompositionTwoArrays
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int sizeOfArray;
            int sum=0;
            int composition=1;
            Console.Write("Введите размер массива: ");
            sizeOfArray = Convert.ToInt32(Console.ReadLine());
            int[,] array = new int[sizeOfArray, sizeOfArray];
            Random random = new Random();

            for(int i =0; i < array.GetLength(0); i++)
            {
                for (int j=0; j< array.GetLength(1); j++)
                {
                    array[i, j] = random.Next(0, 9) ;
                    Console.Write(array[i, j]+ " ");
                    if(i == 1)
                    {
                        sum+=array[i, j]; 
                    }
                    if (j == 0)
                    {
                        composition*=array[i, j];
                    }
                }
                Console.WriteLine();
            }

            Console.WriteLine("Сумма второй строки = " + sum);
            Console.WriteLine("Произведен первого столбца = " + composition);
        }
    }
}
