using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SumOfArray
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] startArray = new int[1];
            int sum = 0;
            int count = 0;
            bool exit = false;
            int[] nextArray = new int[startArray.Length + 1];

            while(exit==false)
            {
                Console.WriteLine("Введите следующий элемент, sum для отображения суммы,exit для выхода: ");
                string element = Console.ReadLine();

                switch (element)
                {
                    case "sum":
                        Console.WriteLine(sum);
                        break;
                    case "exit":
                        exit = true;
                        break;
                    default:
                            bool success = int.TryParse(element, out int number);

                            if (success)
                            {
                                int[] endArray = new int[nextArray.Length + 1];
                                endArray[count] = Convert.ToInt32(element);
                                sum += endArray[count];
                                count++;
                            }

                            else
                            {
                                Console.WriteLine("Введите число либо команду exit или sum.");
                            }                      
                            
                        break;
                }


            }

        }
    }
}
