using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Cycle
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // for позволяет эту задачу выполнить в 4 строчки, while потребовал бы больше строк
            int startNumber, endNumber, step;
            Console.Write("Введите начальное число: ");
            startNumber = Convert.ToInt32(Console.ReadLine());
            Console.Write("Введите конечное число: ");
            endNumber = Convert.ToInt32(Console.ReadLine());
            Console.Write("Введите шаг: ");
            step = Convert.ToInt32(Console.ReadLine());
            
            for (int i = startNumber; i < endNumber; i += step)
            {
                Console.WriteLine(i);
            }
        }
    }
}
